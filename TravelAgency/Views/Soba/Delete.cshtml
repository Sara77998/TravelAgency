@model Domain.Soba

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <p>Da li ste sigurni da zelite da obrisete ovu sobu</p>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SobaID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SobaID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HotelID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HotelID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BrojSobe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BrojSobe)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipSobe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipSobe)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zauzeta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zauzeta)
            </dd>
        </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SobaID" />                
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                <hr />
                <a asp-action="Index" class="btn btn-outline-dark btn-block"><i class="fas fa-arrow-left"></i></a>
            </form>
        
    </div>
</div>
<img class="slika" src="~/images/Sobe.jpg" />
<style>
    .card {
        position: relative;
        top: 10em;
        bottom: 10em;
        padding: 3em;
        opacity: 0.95;
        justify-content: center;
        text-align: inherit;
        z-index: 10;
    }

        .card p {
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 3px;
        }
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }
</style>
