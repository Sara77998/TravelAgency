@model List<Hotel>
@{
    ViewData["Title"] = "Hoteli";
}


<div class="naslov">
    <h1>Hoteli</h1>
    <a class="btn btn-outline-dark" asp-area="" asp-controller="Hotel" asp-action="Create" style="width: 30%;"><i class="fas fa-plus"></i></a>
</div>
<br />
<div class="card">
    <table id="myTable" class="table">
        <thead>
            <tr>
                <th scope="col">Naziv</th>
                <th scope="col">Zemlja</th>
                <th scope="col">Adresa</th>
                <th scope="col">Email</th>
                <th scope="col">Telefon</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naziv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zemlja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.HotelID">
                            <i class="fas fa-info"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.HotelID" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<img class="slika" src="~/images/Hoteli11.jpg" />

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}



<style>
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }

    .naslov {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 1em;
        margin: 0em 3em 0em 3em;
    }

        .naslov h1, a {
            z-index: 10;
        }

    .card {
        position: relative;
        top: 0em;
        bottom: 5em;
        padding: 2em;
        margin: 0em 3em 0em 3em;
        z-index: 10;
        opacity: 0.9;
    }
</style>
