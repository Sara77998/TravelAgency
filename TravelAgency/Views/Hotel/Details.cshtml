@model Domain.Hotel

@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <p>Details</p>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HotelID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HotelID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Zemlja)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Zemlja)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Naziv)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Naziv)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Adresa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adresa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BrojZvezdinca)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BrojZvezdinca)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefon)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefon)
            </dd>
        </dl>
        <div>
            <a class="btn btn-outline-dark btn-block" asp-action="Index">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
    </div>
</div>
<img class="slika" src="~/images/Hoteli11.jpg" />
<style>
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }

    .card {
        position: relative;
        z-index: 10;
        opacity: 0.8;
        margin: 2em 20em 0em 20em;
        justify-content: center;
        padding: 2em;
        opacity: 0.9;
    }


    .card p {
        text-align: center;
        letter-spacing: 5px;
        text-transform: uppercase;
    }
</style>
