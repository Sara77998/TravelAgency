@model TravelAgency.Models.HotelVM


@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <p>Detalji</p>
    <hr />
    <div>
        <div class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.Naziv):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Hotel.Naziv)
            </dd>
        </div>
        <div class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.Zemlja):
            </dt>
            <dl class="col-sm-2">
                @Html.DisplayFor(model => model.Hotel.Zemlja)
            </dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.Grad):
            </dt>
            <dl class="col-sm-2">
                @Html.DisplayFor(model => model.Hotel.Grad)
            </dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.Adresa):
            </dt>
            <dl class="col-sm-2">
                @Html.DisplayFor(model => model.Hotel.Adresa)
            </dl>
        </div>
        <div class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.Email):
            </dt>
            <dl class="col-sm-2">
                @Html.DisplayFor(model => model.Hotel.Email)
            </dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.Telefon):
            </dt>
            <dl class="col-sm-2">
                @Html.DisplayFor(model => model.Hotel.Telefon)
            </dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel.BrojZvezdinca):
            </dt>
            <dl class="col-sm-2">
                @Html.DisplayFor(model => model.Hotel.BrojZvezdinca)
            </dl>
        </div>
        <hr />

        <table class="table table-dark" id="myTable">
            <thead>
                <tr>
                    <th>
                        Broj sobe
                    </th>
                    <th>
                        Tip
                    </th>
                    <th>
                        Zauzeta
                    </th>
                </tr>
            </thead>
            <tbody >
                @foreach (var item in Model.Sobe)
                {
                    <tr>
                        <td class="table-dark">
                            @Html.DisplayFor(modelItem => item.BrojSobe)
                        </td>
                        <td class="table-dark">
                            @Html.DisplayFor(modelItem => item.TipSobe)
                        </td>
                        <td class="table-dark">
                            @Html.DisplayFor(modelItem => item.Zauzeta)
                        </td>                       
                    </tr>
                }
            </tbody>

        </table>
        <hr />
        <div>
            <a class="btn btn-outline-dark btn-block" asp-action="Index">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
    </div>
</div>
<img class="slika" src="~/images/Hoteli11.jpg" />

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}


<style>
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }

    .card {
        position: relative;
        z-index: 10;
        opacity: 0.8;
        margin: 2em 5em 0em 5em;
        justify-content: center;
        padding: 2em;
        opacity: 0.9;
    }


        .card p {
            text-align: center;
            letter-spacing: 5px;
            text-transform: uppercase;
        }
</style>
