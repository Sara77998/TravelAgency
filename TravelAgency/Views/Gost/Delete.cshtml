@model Domain.Gost

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <h3>Zelite da obrisete ovog gosta?</h3>
    <br />
    <div>      
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GostID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GostID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pasos)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pasos)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prezime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prezime)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="GostID" />
            <input type="hidden" asp-for="Pasos" />
            <input type="hidden" asp-for="Ime" />
            <input type="hidden" asp-for="Prezime" />
            <input type="submit" value="Delete" class="btn btn-danger btn-block" />
            <hr />
            <br />
            <a asp-action="Index" class="btn btn-outline-dark btn-lg" ><i class="fas fa-arrow-left"></i></a>
        </form>
    </div>
</div>
<div class="video">
    <div class="color-overlay"></div>
    <video autoplay loop muted style="width: 100%; height: 100%;">
        <source src="~/videos/Pexels Videos 2547258.mp4" type="video/mp4">
    </video>
</div>
<style>
    .video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.7;
        overflow: hidden;
    }
    .card {
        position: relative;
        top: 10em;
        bottom: 10em;
        padding: 3em;
        opacity: 0.8;
        justify-content: center;
        text-align: inherit;
        z-index: 10;
    }
    .card h3{
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 3px;
    }
</style>

