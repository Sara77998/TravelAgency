@model IEnumerable<Domain.Gost>

@{
    ViewData["Title"] = "Index";
}

<div style="display:flex; flex-direction: row; justify-content: space-between; padding: 1em">
    <h1 style="margin-left:1em">Gosti</h1>
    <a type="button" class="btn btn-secondary" asp-controller="Gost" asp-action="Create" style="margin-right:2em"><i class="fa fa-plus" aria-hidden="true"></i> Novi gost</a>  
</div>

<div class="card" style="padding:2em; margin: 2em; margin-top: 0;">  
    <h5 >Filter</h5>    
    <div class="row">
        <div class="col-sm-4">
            <label @*asp-for="BrojZvezdinca"*@ class="control-label">ID/Pasos</label>
            <input @*asp-for="@Gost."*@ class="form-control" />
        </div>
        <div class="col-sm-4">
            <label @*asp-for="BrojZvezdinca"*@ class="control-label">ID/Pasos</label>
            <input @*asp-for="@Gost."*@ class="form-control" />
        </div>
        <div class="col-sm-4">
            <label @*asp-for="BrojZvezdinca"*@ class="control-label">ID/Pasos</label>
            <input @*asp-for="@Gost."*@ class="form-control" />
        </div>
    </div>
</div>
<div class="card" style="padding:2em; margin: 2em; margin-top: 0;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pasos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prezime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatumRodjenja)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pasos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatumRodjenja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.GostID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.GostID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.GostID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

