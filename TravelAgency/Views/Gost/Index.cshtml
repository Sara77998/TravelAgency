@model IEnumerable<Domain.Gost>

@{
    ViewData["Title"] = "Index";
}

<div style="display:flex; flex-direction: row; justify-content: space-between; padding: 1em;">
    <h1 style="margin-left: 1em; z-index: 10;">Gosti</h1>
    <a type="button" class="btn btn-success btn-lg" asp-controller="Gost" asp-action="Create" style="margin-right: 2em; z-index: 10;"><i class="fas fa-user-plus"></i></a>
</div>

<div class="card" style="padding:2em; margin: 2em; margin-top: 0;">
    <h5>Filter</h5>
    <div class="row">
        <div class="col-sm-4">
            <label @*asp-for="BrojZvezdinca"*@ class="control-label">ID/Pasos</label>
            <input @*asp-for="@Gost."*@ class="form-control" />
        </div>
        <div class="col-sm-4">
            <label @*asp-for="BrojZvezdinca"*@ class="control-label">ID/Pasos</label>
            <input @*asp-for="@Gost."*@ class="form-control" />
        </div>
        <div class="col-sm-4">
            <label @*asp-for="BrojZvezdinca"*@ class="control-label">ID/Pasos</label>
            <input @*asp-for="@Gost."*@ class="form-control" />
        </div>
    </div>
</div>
<div class="card" style="padding:2em; margin: 2em; margin-top: 0;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pasos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prezime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatumRodjenja)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pasos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatumRodjenja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GostID" class="btn btn-warning">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.GostID" class="btn btn-primary">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.GostID" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<img src="~/images/Gosti1.jpg" class="slika" />

<div class="video">
    <div class="color-overlay"></div>
    <video autoplay loop muted style="width: 100%; height: 100%;">
        <source src="~/videos/Pexels Videos 2547258.mp4" type="video/mp4">
    </video>
</div>

<style>
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }
    .video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.7;
        overflow: hidden;
    }

    .card {
       
        z-index: 10;
        opacity: 0.9;
        
    }
</style>
