@model Domain.Kalendar

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <p class="text-uppercase">Zakazivanje</p>
    <hr />
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Dogadjaj" class="control-label"></label>
                <input asp-for="Dogadjaj" class="form-control" />
                <span asp-validation-for="Dogadjaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detalji" class="control-label"></label>
                <input asp-for="Detalji" class="form-control" />
                <span asp-validation-for="Detalji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pocetak" class="control-label"></label>
                <input asp-for="Pocetak" class="form-control" />
                <span asp-validation-for="Pocetak" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kraj" class="control-label"></label>
                <input asp-for="Kraj" class="form-control" />
                <span asp-validation-for="Kraj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boja" class="control-label"></label>
                <input asp-for="Boja" class="form-control" />
                <span asp-validation-for="Boja" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CeoDan" /> @Html.DisplayNameFor(model => model.CeoDan)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark btn-block" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-dark btn-block"><i class="fas fa-long-arrow-alt-left"></i></a>
            </div>
        </form>
    </div>
</div>
<img src="~/images/Login11.jpg" class="slika" />


<style>
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }


    .card {
        position: relative;
        z-index: 10;
        opacity: 0.9;
        margin: 2em 20em 0em 20em;
        justify-content: center;
        padding: 2em;
    }

    .row {
        display: flex;
        flex-direction: column;
        align-items: center;
    }


    .card p {
        text-align: center;
        letter-spacing: 5px;
    }
</style>