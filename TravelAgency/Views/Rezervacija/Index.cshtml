@model IEnumerable<Domain.Rezervacija>


<div class="naslov">
    <h1>Rezervacije</h1>
    <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="Rezervacija" asp-action="Create" style="width: 30%; height:2em; margin-top: 1.5em;"><i class="fas fa-plus"></i></a>
</div>
<br />
<div class="card">
    <table id="myTable" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RezervacijaID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SobaID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatumOd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatumDo)
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RezervacijaID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Agent.Ime) @Html.DisplayFor(modelItem => item.Agent.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soba.BrojSobe) @Html.DisplayFor(modelItem => item.Soba.TipSobe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatumOd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatumDo)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<img class="slika" src="~/images/Login11.jpg" />

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#myTable").DataTable();
        });
    </script>
}

<style>
    .slika {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height:100%;
        object-fit: cover;
        opacity: 0.5;
        overflow: hidden;
    }

    .naslov {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 1em;
        margin: 0em 3em 0em 3em;
    }

        .naslov h1, a {
            z-index: 10;
        }

    .card {
        position: relative;
        top: 0em;
        bottom: 5em;
        padding: 2em;
        margin: 0em 3em 0em 3em;
        z-index: 10;
        opacity: 0.9;
    }
</style>
